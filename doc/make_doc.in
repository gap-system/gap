#!/usr/bin/env bash

set -e
set -o pipefail

abs_top_builddir=@abs_top_builddir@
abs_top_srcdir=@abs_top_srcdir@
HPCGAP=@HPCGAP@

GAP=$abs_top_builddir/bin/gap.sh
GAPARGS="-b -m 100m -o 1g -q -x 80 -r --quitonbreak"

WSP=$abs_top_builddir/doc/wsp.g

echo "--------------------"
echo "Building GAP manuals"
echo "--------------------"

if [[ "x@HPCGAP@" != "xyes" ]]
then
    cd "$abs_top_srcdir"
    echo "SaveWorkspace( \"$WSP\" );" | "$GAP"
    ls -al "$WSP"
    GAPARGS="$GAPARGS -L $WSP"
fi

books="ref tut changes hpc"

for run in 1 2
do
  for book in $books
  do
    cd "$abs_top_srcdir/doc/$book"
    echo "----------------------------"
    echo "Building GAP manual '$book' at $PWD"
    echo "Run $run of 2"
    echo "----------------------------"
    echo 'Read( "makedocrel.g" );' | "$GAP" $GAPARGS -A | tee make_manuals.out
  done
done

rm -f "$WSP"
