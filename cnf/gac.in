    gvars.o \
    integer.o \
    intfuncs.o \
    intrprtr.o \
    iostream.o \
    listfunc.o \
    listoper.o \
    lists.o \
    macfloat.o \
    objccoll.o \
    objcftl.o \
    objects.o \
    objfgelm.o \
    objpcgel.o \
    objscoll.o \
    opers.o \
    permutat.o \
    plist.o \
    pperm.o \
    precord.o \
    profile.o \
    range.o \
    rational.o \
    read.o \
    records.o \
    saveload.o \
    scanner.o \
    sctable.o \
    set.o \
    stats.o \
