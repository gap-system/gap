  zoo ah split/src$RBVERSION.zoo $i >/dev/null
  zoo c split/src$RBVERSION.zoo $i <TEXTCOM >&/dev/null
  zoo ah basic$RBVERSION.zoo $i >/dev/null
  zoo c basic$RBVERSION.zoo $i <TEXTCOM >&/dev/null;
