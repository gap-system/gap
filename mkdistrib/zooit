  zoo c gap$RBVERSION.zoo $i <TEXTCOM >&/dev/null;
done
for i in ${DISTNAME}/doc/htm/prg/*; do
#  zoo ah split/doc$RBVERSION.zoo $i >/dev/null
#  zoo c split/doc$RBVERSION.zoo $i <TEXTCOM >&/dev/null
