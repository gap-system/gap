InstallOtherMethod( Zero,
    "method for additive magma",
    true, [ IsAdditiveMagma ], 0,
    function( A )
    local zero;
    zero:= Zero( Representative( A ) );
    if zero <> fail and zero in A then
      return zero;
    else
      return fail;
    fi;
    end );

